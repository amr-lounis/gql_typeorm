  "compilerOptions": {
    "outDir": "dist/src/",
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": ".",
